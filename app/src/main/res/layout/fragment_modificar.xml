<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/fondo_modificar"
    android:gravity="center">

    <EditText
        android:id="@+id/editTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF6F00"
        android:hint="ID"
        android:inputType="number"
        android:textColor="#FF6F00"
        android:textColorHint="#FF6F00" /> <!-- Color naranja oscuro -->

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1976D2"
        android:hint="Nombre"
        android:textColor="#1976D2"
        android:textColorHint="#1976D2" /> <!-- Color azul -->

    <EditText
        android:id="@+id/editTextCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF4081"
        android:hint="Ciudad"
        android:textColor="#FF4081"
        android:textColorHint="#FF4081" /> <!-- Color rosa -->

    <EditText
        android:id="@+id/editTextAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:hint="Álbum"
        android:textColor="#4CAF50"
        android:textColorHint="#4CAF50" /> <!-- Color verde -->

    <EditText
        android:id="@+id/editTextUrlImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:hint="URL de la imagen"
        android:textColor="#9C27B0"
        android:textColorHint="#9C27B0" /> <!-- Color morado -->

    <Button
        android:id="@+id/buttonActualizarRapero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Rapero"
        android:layout_gravity="center_horizontal"
        android:background="#FFA726" /> <!-- Añadimos un fondo personalizado al botón -->

</LinearLayout>
